  title = {Exploring the Impact of Built Environment Factors on the Use of Public Bikes at Bike Stations: {{Case}} Study in {{Zhongshan}}, {{China}}},
  shorttitle = {Exploring the Impact of Built Environment Factors on the Use of Public Bikes at Bike Stations},
